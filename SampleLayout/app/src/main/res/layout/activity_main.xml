<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quanla.samplelayout.MainActivity">

    <TextView
        android:background="@color/color1"
        android:id="@+id/tv_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw"/>
    
    <EditText
        android:id="@+id/edt_draw"
        android:background="@color/color4"
        android:layout_toRightOf="@id/tv_draw"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/tv_draw"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_draw"
        android:text="OK"
        android:textSize="9sp"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/edt_draw"
        android:layout_alignRight="@id/edt_draw"/>

    <RelativeLayout
        android:id="@+id/rl_robot"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/body"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/color2"/>

        <View
            android:layout_above="@id/body"
            android:layout_marginBottom="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/color1"
            android:layout_centerHorizontal="true"
            android:id="@+id/view2" />

        <View
            android:layout_alignLeft="@id/view2"
            android:layout_marginTop="110dp"
            android:background="@color/color5"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="110dp"
            android:layout_alignRight="@id/view2"
            android:background="@color/color5"/>

        <View
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_above="@id/body"
            android:background="@color/color5" />

        <View
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/body"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@color/color3" />

        <View
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/body"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@color/color3" />

        <View
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/body"
            android:layout_below="@id/body"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@color/color4" />

        <View
            android:layout_marginTop="10dp"
            android:layout_alignRight="@id/body"
            android:layout_below="@id/body"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@color/color4" />
    </RelativeLayout>




</RelativeLayout>
